    "koa": "^2.14.2"
  },
  "devDependencies": {
    "@types/koa": "^3.0.1",
    "@types/koa__cors": "^3.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^24.10.1",
    "dotenv": "^16.3.0",
