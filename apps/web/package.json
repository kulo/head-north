    "apexcharts": "^4.0.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.25",
    "vue-router": "^4.2.5",
    "vue3-apexcharts": "^1.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^4.0.14",
    "@vue/test-utils": "^2.4.6",
