{
  "name": "omega-one",
  "version": "1.0.0",
  "description": "Omega One - Unified Frontend and Backend Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:apps && npm run install:packages",
    "install:apps": "npm run install:frontend && npm run install:backend",
    "install:packages": "npm run install:shared-types && npm run install:shared-utils && npm run install:shared-config",
    "install:frontend": "cd apps/frontend && npm install",
    "install:backend": "cd apps/backend && npm install",
    "install:shared-types": "cd packages/shared-types && npm install",
    "install:shared-utils": "cd packages/shared-utils && npm install",
    "install:shared-config": "cd packages/shared-config && npm install",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run start-dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run start",
    "build": "npm run build:frontend && npm run build:backend",
    "start:frontend": "cd apps/frontend && npm run start",
    "start:backend": "cd apps/backend && npm run start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:backend": "cd apps/backend && npm test",
    "test": "npm run test:frontend && npm run test:backend",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules tools/*/node_modules node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kulo/omega-one.git"
  },
  "keywords": [
    "omega",
    "monorepo",
    "frontend",
    "backend",
    "vue",
    "node",
    "koa"
  ],
  "author": "Prewave Team",
  "license": "UNLICENSED",
  "dependencies": {
    "vue": "^3.5.21"
  }
}
