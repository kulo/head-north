{
  "name": "head-north",
  "version": "1.0.0",
  "description": "Head North - Unified Frontend and Backend Monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@headnorth/web",
    "dev:api": "turbo run dev --filter=@headnorth/api",
    "build": "turbo run build",
    "test": "turbo run test",
    "ci": "turbo run build",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui --filter=@headnorth/web",
    "test:e2e:headed": "turbo run test:e2e:headed --filter=@headnorth/web",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules tools/*/node_modules",
    "validate": "turbo run type-check lint format:check",
    "validate:env": "node scripts/validate-env.js",
    "dev:with-check": "npm run validate:env && npm run dev",
    "stop": "(lsof -ti:8080 | xargs kill -9 2>/dev/null || true) && (lsof -ti:3000 | xargs kill -9 2>/dev/null || true)",
    "stop:web": "lsof -ti:8080 | xargs kill -9 2>/dev/null || true",
    "stop:api": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "stop:force": "pkill -f 'node.*dist/index.js' 2>/dev/null || true; pkill -f 'vite' 2>/dev/null || true; (lsof -ti:8080 | xargs kill -9 2>/dev/null || true) && (lsof -ti:3000 | xargs kill -9 2>/dev/null || true)",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "analyze:unused": "ts-prune --ignore 'tests|test|spec|dist|coverage|node_modules'",
    "analyze:deps": "depcheck",
    "analyze:all": "npm run analyze:unused && npm run analyze:deps"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "depcheck": "^1.4.7",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.0.0",
    "ts-prune": "^0.10.3",
    "turbo": "^2.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14",
    "vue-eslint-parser": "^9.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kulo/head-north.git"
  },
  "keywords": [
    "head-north",
    "monorepo",
    "frontend",
    "backend",
    "vue",
    "node",
    "fastify"
  ],
  "author": "Michael Wagner-Kulovits",
  "license": "MIT",
  "dependencies": {
    "p-retry": "^7.1.0",
    "purify-ts": "^2.1.2",
    "ts-pattern": "^5.9.0",
    "vue": "^3.5.25",
    "zod": "^4.1.12"
  }
}
