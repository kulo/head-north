{
  "name": "omega-one",
  "version": "1.0.0",
  "description": "Omega One - Unified Frontend and Backend Monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start-dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run start",
    "build": "npm run build:frontend && npm run build:backend",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm test",
    "test": "npm run test:frontend && npm run test:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "clean": "rm -rf frontend/node_modules backend/node_modules node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": "16.15.0",
    "npm": "8.5.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prewave/omega-one.git"
  },
  "keywords": [
    "omega",
    "monorepo",
    "frontend",
    "backend",
    "vue",
    "node",
    "koa"
  ],
  "author": "Prewave Team",
  "license": "UNLICENSED"
}
