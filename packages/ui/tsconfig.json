{
  "extends": "../../tools/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@omega/types": ["../../packages/shared-types/src"],
      "@omega/utils": ["../../packages/shared-utils/src"],
      "@omega/config": ["../../packages/shared-config/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../../packages/shared-types" },
    { "path": "../../packages/shared-config" },
    { "path": "../../packages/shared-utils" }
  ],
  "tsBuildInfoFile": "./.tsbuildinfo"
}
