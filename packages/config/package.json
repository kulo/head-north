{
  "name": "@omega/config",
  "version": "1.0.0",
  "description": "Shared configuration files for Omega applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "node esbuild.config.js && tsc --project tsconfig.declaration.json",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "lint": "eslint . --ext .ts,.js --fix --ignore-path .gitignore",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "config",
    "omega",
    "shared",
    "typescript"
  ],
  "author": "Prewave Team",
  "license": "UNLICENSED"
}
