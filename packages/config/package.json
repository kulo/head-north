{
  "name": "@omega/config",
  "version": "1.0.0",
  "description": "Shared configuration files for Omega applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "node esbuild.config.js && tsc --project tsconfig.declaration.json",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "lint": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "config",
    "omega",
    "shared",
    "typescript"
  ],
  "author": "Michael Wagner-Kulovits",
  "license": "MIT",
  "dependencies": {
    "purify-ts": "^2.1.2",
    "zod": "^4.1.12"
  }
}
