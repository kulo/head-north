{
  "name": "@headnorth/jira-primitives",
  "version": "1.0.0",
  "description": "JIRA data extraction and transformation utilities for Head North",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:@headnorth/config --external:@headnorth/types --external:jira.js --external:purify-ts && npm run build:types",
    "build:types": "tsc --project tsconfig.declaration.json",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@headnorth/config": "file:../config",
    "@headnorth/types": "file:../types",
    "jira.js": "^5.2.2",
    "purify-ts": "^2.1.2"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "author": "Michael Wagner-Kulovits",
  "license": "MIT"
}
