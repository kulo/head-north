{
  "name": "@omega/utils",
  "version": "1.0.0",
  "description": "Shared utilities for Omega One",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "extensionless": "^1.9.9",
    "pino": "^8.16.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "node esbuild.config.js && tsc --project tsconfig.declaration.json",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts,.js --fix --ignore-path .gitignore",
    "type-check": "tsc --noEmit"
  }
}
