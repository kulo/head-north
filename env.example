# Head North Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration (API uses 3000 in development)
HN_PORT=3000
HN_MAX_RETRY=3
HN_DELAY_BETWEEN_RETRY=2

# Data Source Adapter Selection
# Options: "fake" (for fake data), "default" (default Jira adapter), "prewave" (Prewave Jira adapter)
HN_DATA_SOURCE_ADAPTER=fake

# JIRA Configuration (required when using Jira adapters)
HN_JIRA_USER=your-jira-user@example.com
HN_JIRA_TOKEN=your-jira-api-token
HN_JIRA_HOST=https://your-instance.atlassian.net
HN_JIRA_BOARD_ID=1234

# Standard Node.js environment variable
NODE_ENV=development

# Optional: JIRA Field IDs (adapter-specific overrides)
# If set, adapters may use these instead of their internal defaults
# HN_JIRA_FIELD_EPIC=customfield_10014
# HN_JIRA_FIELD_SPRINT=customfield_10020
# HN_JIRA_FIELD_STORY_POINTS=customfield_10016

